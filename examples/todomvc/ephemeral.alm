module ephemeral
sorts
    ephemeral :: universe 
    activate_new :: universe
    deactivate :: universe
        target :: universe
fluents
    basic
        active : ephemeral -> booleans
        next_active : ephemeral
        not_next_active : ephemeral -> booleans
axioms
    not_next_active(X) if
        -active(Y)
        Y < X.

    next_active(X) if -not_next_active(X).

    occurs(X) causes active(Next) if
        instance(X, activate_new),
        next_active(Next).
